{
  "name": "campaign-template",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": "liam61",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "yarn test:unit && yarn test:e2e",
    "test:dev": "yarn vitest",
    "test:unit": "yarn vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e-ui": "playwright test --ui",
    "report:ci": "cat vitest/coverage/coverage-final.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:tsc": "tsc --noEmit --skipLibCheck",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "lint:fix": "eslint . --ext ts,tsx --quiet --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,cjs,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@formily/antd": "^2.3.1",
    "@formily/core": "^2.3.1",
    "@formily/react": "^2.3.1",
    "@formily/validator": "^2.3.1",
    "ahooks": "^3.8.0",
    "antd": "4.24.1",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "qs": "^6.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.5",
    "@types/node": "^20.14.2",
    "@types/qs": "^6.9.15",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "commitizen": "^4.3.0",
    "dependency-cruiser": "^16.3.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "msw": "^1.3.3",
    "postcss": "^8.4.38",
    "prettier": "^3.3.1",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dynamic-import": "^1.5.0",
    "vite-plugin-react-click-to-component": "^3.0.0",
    "vitest": "^1.6.0"
  }
}
